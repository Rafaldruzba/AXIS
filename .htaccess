# ----------------------------------------------------------------------
# 1. OBSŁUGA REACT ROUTER (SPA)
# Zapobiega błędom 404 przy odświeżaniu strony na podstronach
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond % {REQUEST_FILENAME} !-f
  RewriteCond % {REQUEST_FILENAME} !-d
  RewriteCond % {REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>

# ----------------------------------------------------------------------
# 2. WYMUSZENIE HTTPS I WWW (LUB BEZ WWW)
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ----------------------------------------------------------------------
# 3. KOMPRESJA GZIP (PRZYSPIESZA ŁADOWANIE)
# ----------------------------------------------------------------------
<IfModule mod_filter.c>
  <IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/x-javascript application/javascript application/ecmascript
    AddOutputFilterByType DEFLATE application/rss+xml application/xml application/json
    AddOutputFilterByType DEFLATE image/svg+xml
  </IfModule>
</IfModule>

# ----------------------------------------------------------------------
# 4. LEVERAGE BROWSER CACHING (DLA PLIKÓW STATYCZNYCH)
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Obrazy i ikony
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"

  # Skrypty i style
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"

  # Czcionki
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ----------------------------------------------------------------------
# 5. BEZPIECZEŃSTWO (SECURITY HEADERS)
# ----------------------------------------------------------------------
<IfModule mod_headers.c>
  # Blokowanie otwierania strony w ramkach (zabezpieczenie przed Clickjackingiem)
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Ochrona przed XSS
  Header set X-XSS-Protection "1; mode=block"
  
  # Blokowanie zgadywania typów plików (MIME sniffing)
  Header set X-Content-Type-Options "nosniff"
  
  # Usuwanie informacji o serwerze (dla bezpieczeństwa)
  Header unset X-Powered-By
</IfModule>

# ----------------------------------------------------------------------
# 6. BLOKOWANIE PODGLĄDU KATALOGÓW
# ----------------------------------------------------------------------
Options -Indexes